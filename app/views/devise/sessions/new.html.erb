<!doctype html>
<html lang="ja">
  <head>
    <link href=https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- 必要であれば、独自のCSSファイルもここにリンクする -->
  </head>
  <body>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
        <br>
          <h2>ログイン画面</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control no-border', placeholder: 'name@example.com' %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control no-border', placeholder: 'Password' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class: 'w-100 btn btn-lg btn-primary' %>
            </div>
          <% end %>

          <%= link_to "ゲスト管理者ログイン", users_guest_admin_sign_in_path, method: :post %><br/ >
          <%= link_to "ゲスト匠（事業者）ログイン", users_guest_craftman_sign_in_path, method: :post %><br/ >
          <%= link_to "ゲスト候補者ログイン", users_guest_candidate_sign_in_path, method: :post %><br/ >
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </body>
</html>
