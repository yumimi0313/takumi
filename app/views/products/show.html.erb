<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title mb-4"><%= @product.name %></h2>
          
          <p class="card-text">
            <strong>詳細:</strong>
            <%= @product.description %>
          </p>

          <p class="card-text">
          <strong>画像:</strong>
          <% if @product.images.attached? %>
            <% @product.images.each do |image| %>
              <%= image_tag image.variant(resize_to_limit: [500, 500]), class: "d-block w-100 img-fluid carousel-image" %>
            <% end %>
          <% end %>
        </p>

          <div class="d-flex justify-content-between align-items-center mt-4">
            <%= link_to '編集する', edit_product_path(@product), class: 'btn btn-primary' %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
