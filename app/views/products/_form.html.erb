<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= form_with(model: product, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
        <% if product.errors.any? %>
          <div class="alert alert-danger" id="error_explanation">
            <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
              <% product.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.hidden_field :user_id, value: current_user.id %>
        </div>

        <div class="form-group">
        <%= form.label :＊商品名, class: "control-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "例: 高級最中セット" %>
        </div>
      
        <div class="form-group">
        <%= form.label :詳細, class: "control-label" %>
        <%= form.text_area :description, class: "form-control", rows: 5, placeholder: "例: 当店自慢の最中セットです。厳選された餡とサクサクの最中でお楽しみいただけます。" %>
        </div>

        <div class="form-group">
          <%= form.label :image, '画像', class: "control-label" %>
          <%= form.file_field :images, multiple: true, class: "form-control-file" %>
        </div>

        <div class="actions">
          <%= form.submit '登録する', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
