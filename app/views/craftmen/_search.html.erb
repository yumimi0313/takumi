<%= search_form_for @q, url: url, html: { class: 'form-inline' } do |f| %>
  <div class="form-group mx-sm-2">
    <%= f.label :prefecture_eq, "県名検索", class: 'mr-2' %>
    <%= f.select :prefecture_eq, Craftman.prefectures.map { |k, v| [k, v] }, { include_blank: '選択してください' }, class: 'form-control' %>
  </div>

  <div class="form-group mx-sm-2">
    <%= f.label :category_eq, "カテゴリー検索", class: 'mr-2' %>
    <%= f.select :category_eq, Craftman.categories.map { |k, v| [k, v] }, { include_blank: '選択してください' }, class: 'form-control' %>
  </div>

  <div class="form-group mx-sm-2">
    <%= f.search_field :company_name_or_recruit_title_or_recruit_content_or_profile_or_technology_cont, placeholder: '検索ワード', class: 'form-control' %>
  </div>

  <%= f.submit '検索', class: 'btn btn-primary' %>
<% end %>
