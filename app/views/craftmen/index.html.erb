
<h1>Craftmen</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th>Company name</th>
      <th>Prefecture</th>
      <th>Manicipal</th>
      <th>Recruit status</th>
      <th>Recruit title</th>
      <th>Recruit content</th>
      <th>Profile</th>
      <th>History</th>
      <th>Technology</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @craftmen.each do |craftman| %>
      <tr>
        <td><%= craftman.user_id %></td>
        <td><%= craftman.category %></td>
        <td><%= craftman.company_name %></td>
        <td><%= craftman.prefecture %></td>
        <td><%= craftman.manicipal %></td>
        <td><%= craftman.recruit_status %></td>
        <td><%= craftman.recruit_title %></td>
        <td><%= craftman.recruit_content %></td>
        <td><%= craftman.profile %></td>
        <td><%= craftman.history %></td>
        <td><%= craftman.technology %></td>
        <td><%= craftman.image %></td>
        <td><%= link_to 'Show', craftman %></td>
        <td><%= link_to 'Edit', edit_craftman_path(craftman) %></td>
        <td><%= link_to 'Destroy', craftman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

