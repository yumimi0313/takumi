<!doctype html>
<html lang="ja" >

<head>
<title>TSUNAGU</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link href="album.css" rel="stylesheet">
</head>

<section class="jumbotron text-center">
<div class="container">
<h1 class="jumbotron-heading">TSUNAGU</h1>
<p class="lead text-muted">繋がり</p>
<p>
<a href="#" class="btn btn-primary my-2">Main call to action</a>
<a href="#" class="btn btn-secondary my-2">Secondary action</a>
</p>
</div>
</section>

<%= render 'search', q: @q, url: candidates_path %>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @candidates.each do |candidate| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <% if candidate.image.attached? %>
              <%= image_tag candidate.image.variant(resize_to_limit: [350, 250]), class: 'card-img-top' %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= candidate.user_id %></h5>
              <p class="card-text"><%= candidate.interested_category %></p>
              <p class="card-text"><%= candidate.wanted_technology %></p>
              <p class="card-text"><%= candidate.prefecture %></p>
              <p class="card-text"><%= candidate.profile %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to '詳細', candidate, class: 'btn btn-sm btn-outline-secondary' %>
                  <% if candidate.user == current_user %>
                    <%= link_to '編集する', edit_candidate_path(candidate), class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to '削除する', candidate, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<br>
</html>
