
<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Interested category</th>
      <th>Wanted technology</th>
      <th>Prefecture</th>
      <th>Profile</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.user_id %></td>
        <td><%= candidate.interested_category %></td>
        <td><%= candidate.wanted_technology %></td>
        <td><%= candidate.prefecture %></td>
        <td><%= candidate.profile %></td>
        <td><%= candidate.image %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Candidate', new_candidate_path %>
