<%= form_with(model: candidate) do |form| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <% if candidate.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>
            <ul>
              <% candidate.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.hidden_field :user_id, value: current_user.id %>
        </div>

        <div class="form-group">
        <%= form.label :＊名前 %>
        <%= form.text_field :name, class: "form-control", placeholder: "例: 山田太郎" %>
        </div>

        <div class="form-group">
          <%= form.label :＊興味のあるカテゴリー %>
          <%= form.select :interested_category, Candidate.interested_categories.keys, {include_blank: true}, class: "form-control" %>
        </div>

        <div class="form-group">
        <%= form.label :希望する技術分野 %>
        <%= form.text_field :wanted_technology, class: "form-control", placeholder: "例: 和菓子製造、特に餅や最中の製造" %>
        </div>

        <div class="form-group">
          <%= form.label :＊県名 %>
          <%= form.select :prefecture, Candidate.prefectures.keys, {include_blank: true}, class: "form-control" %>
        </div>

        <div class="form-group">
        <%= form.label :プロフィール %>
        <%= form.text_area :profile, class: "form-control", placeholder: "例: 東京都出身。和菓子が好きで、伝統的な技術を学びたいと考えています。" %>
        </div>

        <div class="form-group">
          <%= form.label :images, '画像' %>
          <%= form.file_field :images, multiple: true, class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= form.submit '登録する', class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
